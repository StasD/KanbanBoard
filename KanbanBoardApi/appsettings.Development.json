{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.DataProtection": "Information"
    }
  },
  "AllowedHosts": "*",
  "EmailSender": {
    "Host": "localhost",
    "Port": 8125,
    "FromEmail": "noreply@kanbanboard.net",
    "FromName": "Kanban Board Demo"
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:7003",
        "Certificate": {
          "Path": "../data/ssl/server.crt",
          "KeyPath": "../data/ssl/server.key"
        }
      }
    }
  },
  "CorsSettings": {
    "AllowedOrigins": "http://localhost:5173",
    "ClientHeaders": "Content-Type,Authorization,X-Custom-Auth,X-Custom-Header,X-Custom-Header2",
    "ExposedHeaders": "Content-Disposition,X-Pagination-Total,X-Custom-Header,X-Custom-Header2"
  }
}
